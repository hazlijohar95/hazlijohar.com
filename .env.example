# HJC Chartered Accountants - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Supabase Configuration
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Application Configuration
VITE_APP_NAME="HJC Chartered Accountants"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# Debug and Development
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,jpg,png,gif"

# Security Configuration
VITE_RATE_LIMIT_MAX_ATTEMPTS=5
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_RATE_LIMIT_BLOCK_DURATION_MS=1800000

# API Configuration
VITE_API_TIMEOUT_MS=30000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_FEATURE_CHAT_SUPPORT=true
VITE_FEATURE_CALENDAR_BOOKING=true
VITE_FEATURE_DOCUMENT_PREVIEW=true

# =============================================================================
# PRODUCTION-ONLY CONFIGURATION
# =============================================================================
# These should only be set in production environments

# Analytics (Production Only)
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_HOTJAR_ID=1234567

# Error Tracking (Production Only)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CDN Configuration (Production Only)
# VITE_CDN_URL=https://cdn.example.com

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. Never commit real credentials to version control
# 2. Use different Supabase projects for development/staging/production
# 3. Keep VITE_ENABLE_DEBUG_MODE=false in production
# 4. Enable analytics only in production
# 5. Use strong, unique keys for each environment

# =============================================================================
# ENVIRONMENT SPECIFIC EXAMPLES
# =============================================================================

# Development Example:
# VITE_SUPABASE_URL=https://dev-project.supabase.co
# VITE_ENABLE_DEBUG_MODE=true
# VITE_ENABLE_ANALYTICS=false

# Staging Example:
# VITE_SUPABASE_URL=https://staging-project.supabase.co
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_ANALYTICS=false

# Production Example:
# VITE_SUPABASE_URL=https://prod-project.supabase.co
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_ANALYTICS=true
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX