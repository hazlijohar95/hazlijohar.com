# HJC Chartered Accountants - Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration (Required)
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
VITE_APP_NAME=HJC Chartered Accountants
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Security Configuration
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# External Services
VITE_CAL_COM_URL=https://app.cal.com
VITE_CONTACT_EMAIL=your-email@example.com
VITE_CONTACT_PHONE=+60-XX-XXXXXXX

# Feature Flags
VITE_ENABLE_DOCUMENT_UPLOAD=true
VITE_ENABLE_USER_REGISTRATION=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Rate Limiting
VITE_RATE_LIMIT_MAX_ATTEMPTS=5
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_RATE_LIMIT_BLOCK_DURATION_MS=1800000

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,image/jpeg,image/png,image/gif

# Optional: Analytics (Google Analytics, etc.)
VITE_GA_TRACKING_ID=your_ga_tracking_id_here
VITE_SENTRY_DSN=your_sentry_dsn_here

# Optional: Third-party Services
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_key_here
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key_here 