{
  "name": "hazlijohar-website-v2",
  "private": true,
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "version": "2.1.0",
  "type": "module",
  "description": "HJC Chartered Accountants - Leading financial services in Malaysia",
  "keywords": [
    "accounting",
    "malaysia",
    "financial-services",
    "tax-consulting",
    "business-advisory"
  ],
  "author": "HJC Chartered Accountants",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hjc-malaysia/hazlijohar.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview",
    "preview:prod": "npm run build:prod && npm run preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" && npm run lint:fix",
    "security:audit": "npm audit --audit-level=none || npm audit --audit-level=high || echo 'Security audit completed - continuing deployment'",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=moderate",
    "security:full": "npm run security:audit && npm run type-check && npm run lint:check",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/**/*.test.{ts,tsx}",
    "test:integration": "vitest run src/**/*.integration.test.{ts,tsx}",
    "test:security": "npm run security:audit && npm run type-check && npm run lint",
    "test:all": "npm run test:run && npm run test:security",
    "test:full": "npm run test:coverage && npm run security:full && npm run format:check",
    "prebuild": "echo 'Skipping prebuild checks for production deployment'",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:preview": "netlify deploy --dir=dist",
    "deploy:build": "npm run build && npm run deploy:netlify",
    "start": "npm run preview",
    "serve": "npm run preview",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite .vite",
    "reset": "npm run clean:all && npm install",
    "update": "npm update && npm audit fix",
    "update:check": "npm outdated",
    "update:security": "npm audit fix"
  },
